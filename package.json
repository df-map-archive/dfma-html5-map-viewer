{
  "name": "dfma-html5-map-viewer",
  "version": "1.0.0",
  "description": "Home for development of a new HTML5 Map Viewer for Dwarf Fortress.",
  "main": "viewer.js",
  "scripts": {
    "setup": "./scripts/setup/installComposer.sh",
    "test": "mocha",
    "parcel": "parcel build src/index.html external/DFMA-Viewer-HTML5/file.fdf-map --public-url ./",
    "build": "./build-script.sh",
    "start": "parcel src/index.html external/DFMA-Viewer-HTML5/file.fdf-map",
    "preinstall": "npm run submodules:init && npm run submodules:clean",
    "submodules:init": "git submodule init && git submodule update",
    "submodules:clean": "git submodule foreach --recursive git checkout .",
    "submodules:update": "git submodule foreach --recursive git pull origin master"
  },
  "staticFiles": {
    "staticPath": "external/DFMA-Viewer-HTML5/public",
    "watcherGlob": "*.fdf-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/df-map-archive/dfma-html5-map-viewer.git"
  },
  "keywords": [
    "DF",
    "Map",
    "Archive",
    "Viewer",
    "HTML",
    "5",
    "DFMA",
    "Dwarf",
    "Fortress",
    "JS",
    "Wrapper",
    "Jacob",
    "Blomquist",
    "P5"
  ],
  "author": "DF Map Archive",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/df-map-archive/dfma-html5-map-viewer/issues"
  },
  "homepage": "https://github.com/df-map-archive/dfma-html5-map-viewer#readme",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0"
  }
}
